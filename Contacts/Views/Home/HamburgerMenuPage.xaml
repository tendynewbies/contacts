                  xmlns:menu="clr-namespace:Contacts.Views.Menu"
                  xmlns:contacts="clr-namespace:Contacts.Views.MyContacts"
                  IconImageSource="tab_about.png">
    <MasterDetailPage.Master>
        <menu:MenuPage />
    </MasterDetailPage.Master>
    <MasterDetailPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <contacts:ContactsListPage/>
            </x:Arguments>
        </NavigationPage>
    </MasterDetailPage.Detail>
</MasterDetailPage>
